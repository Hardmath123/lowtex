// Reverse adds a formatter that reverses words
plugin.id = "reverse";
plugin.filters["reverse"] = {
	"end": function(lines) {
		var ans = [];
		lines.forEach(function(l) {
			words = l.split(' ');
			for (var i = 0; i < words.length; ++i) {
				words[i] = words[i].split('').reverse().join('');
			}
			ans.push(words.join(' '));
		});
		return ans;
	}
};
